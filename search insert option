{

    public static void main(String[] args) {

        int arr[] = {1,3,5,6};
        int n = arr.length;
        int target =7;
        int[] arr1 = new int[n];
        int j=0;
        for (int i=0;i<n;i++ ){
            if (arr[i]==target){
                arr1[j++]=i;
            }else if (arr[i]==target-1){
                arr1[j++]=i+1;
            }else if (arr1[i]==target+1){
                arr[j++]=i-1;
            }

        }
        System.out.println(arr1[0]);



}

}
