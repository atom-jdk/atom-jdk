import java.util.Arrays;

public class Main {

    public static void main(String[] args) {

        int arr[] = {5,7,7,6,8,10};
        int n = arr.length;
        int target =6;
        int[] arr1 = new int[n];
        int j=0;
        for (int i=0;i<n;i++ ){
            if (arr[i]==target){
                arr1[j++]=i;
            }else if(arr[i]!=target){
                arr1[j++]=-1;
            }

        }
        System.out.println(Arrays.toString(arr1));



}

}
