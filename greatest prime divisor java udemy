public class Main {

    public static void main(String[] args) {

        greatestPrimeDivisor(12);
        greatestPrimeDivisor(217);
        greatestPrimeDivisor(0);

    }

    public static void greatestPrimeDivisor(int n1) {
        int greatest = 0;
        if (n1 > 0) {
            for (int i = 1; i < n1; i++) {
                if (n1 % i == 0) {
                    greatest = i;
                }

            }
            System.out.println(greatest);

        }else System.out.println("invalid entry");

    }

}
